@{
    ViewData["Title"] = "Login";
}

<head>
    <title>Ping It</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <!-- Wrapper -->
    <div id="wrapper">
        <!-- Main -->
        <div id="main">
            <div class="inner">
                <header align="center">
                    <h1>PingIt</h1>
                    <p>A free, crowd-sourced web service helping Internet test and compare website performance.</p>
                </header>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <div class="inner">
                    <h2 align="center">Login</h2>
                    <form method="post" action="#">
                        <table align="center" style="width:100px">
                            <tr>
                                <td>Username </td>
                                <td alignment="center"><input type="text" name="username" id="login_username" style="width: 200px" /></td>
                            </tr>
                            <tr>
                                <td> Password </td>
                                <td alignment="center"><input type="password" name="password" id="login_password" style="width: 200px" /></td>
                            </tr>
                            <tr>
                                <td align="center"><input type="button" value="Create Account" id="create_btn" style="width: 200px" onclick="location.href='/CreateUser/Index'"/></td>
                                <td align="center"><input type="button" value="Login" id="login_btn" onclick="Login()" style="width: 200px" /></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        //Runs the login function
        function Login() {
            $.ajax({
                type: "POST",
                url: "/Home/ValidateLogin",
                async: true,
                dataType: "json",
                data: { username: $("#login_username").val(), password: $("#login_password").val()},
                success: function (data) {
                    if (data.valid) {
                        window.location.href = '/Options/Index';
                    } else {
                        alert("Password did not match.");
                    }

                },
                error: function () {
                    return "error";
                }
            });
        }

    </script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/skel.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/main.js"></script>


</body>
