@{
    ViewData["Title"] = "Home";
}

<head>
    <title>PingIt</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../../css/main.css" />
</head>
<body>
    <!-- Wrapper -->
    <div id="wrapper">
        <!-- Header -->
        <header id="header">
            <div class="inner">
                <!-- Nav -->
                <nav>
                    <ul>
                        <li><a href="#menu">Menu</a></li>
                    </ul>
                </nav>
            </div>
        </header>

        <!-- Menu -->
        <nav id="menu">
            <h2>Menu</h2>
            <ul>
                <li><a href="~/Options/index"> Home </a></li>
                <li><a href="~/WebTest/Index"> Web Test </a></li>
                <li><a href="~/CrowdSource/Index"> Crowdsourced Database </a></li>
                <li><a href="~/DataAnalytics/Index"> Data Analytics </a></li>
            </ul>
        </nav>

        <!-- Main -->
        <div id="main">
            <div class="inner">
                <header align="center">
                    <h1>PingIt</h1>
                    <p>A free, crowd-sourced web service helping Internet test and compare website performance.</p>
                </header>
                <section class="tiles">
                    <article class="style1">
                        <span class="image">
                            <img src="../../images/pic01.jpg" alt="" />
                        </span>
                        <a href="../WebTest/Index">
                            <h2>Test Web Availability</h2>
                            <div class="content">
                                <p>Monitor website performance and availability.</p>
                            </div>
                        </a>
                    </article>
                    <article class="style2">
                        <span class="image">
                            <img src="../../images/pic02.jpg" alt="" />
                        </span>
                        <a href="../CrowdSource/Index">
                            <h2>Web Performance Database</h2>
                            <div class="content">
                                <p>View a crowd sourced database of web performance information.</p>
                            </div>
                        </a>
                    </article>
                    <article class="style3">
                        <span class="image">
                            <img src="../../images/pic03.jpg" alt="" />
                        </span>
                        <a href="../DataAnalytics/Index">
                            <h2>Data Analytics</h2>
                            <div class="content">
                                <p>View charts and graphs of user and public data to analyze broadband availability and speeds.</p>
                            </div>
                        </a>
                    </article>
                </section>
            </div>
        </div>
    </div>

    <script src="../../js/jquery.min.js"></script>
    <script src="../../js/skel.min.js"></script>
    <script src="../../js/util.js"></script>
    <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
    <script src="../../js/main.js"></script>

</body>
