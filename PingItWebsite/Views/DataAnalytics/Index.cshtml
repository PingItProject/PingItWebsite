
@{
    ViewData["Title"] = "Data Analytics";
}

<head>
    <title>Ping It</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/main.css" />
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>
<style>
    .btn-group button {
        background-color: #ADD8E6;
        display: block;
    }
    .btn-group button:hover {
        background-color: #555;
    }
</style>
<body>
    <!-- Wrapper -->
    <div id="wrapper">
        <!-- Header -->
        <header id="header">
            <div class="inner">
                <!-- Nav -->
                <nav>
                    <ul>
                        <li><a href="#menu">Menu</a></li>
                    </ul>
                </nav>
            </div>
        </header>

        <!-- Menu -->
        <nav id="menu">
            <h2>Menu</h2>
            <ul>
                <li><a href="~/Options/index"> Home </a></li>
                <li><a href="~/WebTest/Index"> Web Test </a></li>
                <li><a href="~/CrowdSource/Index"> Crowdsourced Database </a></li>
                <li><a href="~/DataAnalytics/Index"> Data Analytics </a></li>
                <li><a href="~/About/Index"> About </a></li>
            </ul>
        </nav>



        
        <!-- Main -->
        <div id="main">
            <!--Inner-->
            <div class="inner">
                <h2 align="center">Test and Compare Broadband Availability</h2>
                <div class="btn-group" align="center">
                    <button id="user_data_btn" onclick="ShowUserButtons()">User Data</button>
                </div>
                <p></p>
                <p></p>
                <div id="user_data_options" style="display:none" align="center">
                    <h6 align="center">View your own website test data</h6>
                    <input id="useravgs_btn" type="button" value="User Avgs" onclick="LoadUserSection()" style="background:#F08080; font-size:10px;" />
                </div>
                <p></p>
                <p></p>
                <div id="user_section" align="center"/>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        function ShowUserButtons() {
            var useroptions = document.getElementById("user_data_options");
            useroptions.style.display = "block";
        }
    </script>
    <script>
        function LoadUserSection() {
            $("#user_section").load('@Url.Action("UserSection", "DataAnalytics")');
        }
    </script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/skel.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/main.js"></script>

</body>



